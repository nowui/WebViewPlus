<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="fill_parent" tools:context=".MainActivity">

    <com.handmark.pulltorefresh.library.PullToRefreshWebView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pull_refresh_webview"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:background="@color/background_color"
        ptr:ptrHeaderTextColor="#999999"
        ptr:ptrHeaderBackground="#eeeeee"
        ptr:ptrAnimationStyle="flip" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/load_error_tips"
        android:id="@+id/tipsTextView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/text_color"
        android:background="@color/background_color"
        android:visibility="invisible"
        android:clickable="true" />

</RelativeLayout>
